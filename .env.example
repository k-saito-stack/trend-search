# xAI API key
XAI_API_KEY=YOUR_XAI_API_KEY

# Optional: model
XAI_MODEL=grok-4-1-fast

# Optional: set 0 to disable X(Grok) collection even when API key exists
SOURCE_ENABLE_X=1

# Optional: comma separated source IDs to enable (blank = all defaults)
# ENABLED_SOURCE_IDS=news_publish_general,news_pr_times,ranking_amazon_books

# Optional: HTTP timeout (ms) and parallel requests
# SOURCE_HTTP_TIMEOUT_MS=12000
# SOURCE_CONCURRENCY=4

# Optional: port
PORT=3000

# Optional: when 1, scheduler checks at startup once
RUN_ON_START=0
