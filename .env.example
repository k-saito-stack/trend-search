# xAI API key
XAI_API_KEY=YOUR_XAI_API_KEY

# Optional: model
XAI_MODEL=grok-4-1-fast-non-reasoning

# Optional: host bind (default: 127.0.0.1)
HOST=127.0.0.1

# Optional: set 0 to disable X(Grok) collection even when API key exists
SOURCE_ENABLE_X=1

# Optional: comma separated source IDs to enable (blank = all defaults)
# ENABLED_SOURCE_IDS=news_publish_general,news_pr_times,ranking_amazon_books

# Optional: HTTP timeout/parallel/response-size limit for source collection
# SOURCE_HTTP_TIMEOUT_MS=12000
# SOURCE_CONCURRENCY=4
# SOURCE_MAX_RESPONSE_BYTES=2097152

# Optional: POST /api/run auth
# - Set RUN_API_TOKEN for shared-token auth (browser prompts on first manual run)
# RUN_API_TOKEN=replace-with-long-random-token
# - Or trust reverse proxy auth header (example: x-forwarded-user)
# RUN_AUTH_PROXY_HEADER=x-forwarded-user

# Optional: minimum interval between manual runs (ms)
# RUN_MIN_INTERVAL_MS=30000

# Optional: port
PORT=3000

# Optional: when 1, scheduler checks at startup once
RUN_ON_START=0
